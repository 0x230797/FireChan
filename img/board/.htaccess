# Permitir solo acceso a im치genes

<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Allow from all
</FilesMatch>

# Denegar acceso a archivos PHP y scripts
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|htm|shtml|sh|cgi)$">
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

